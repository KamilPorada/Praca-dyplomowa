<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_farm_fragment"
    android:background="@color/backgroundColor"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="70dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_rectangle_with_top_and_bottom_line"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crete_round"
                android:text="Moje\ngospodarstwo"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/circle_layout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/circle_layout"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/shape_image_farm_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingLeft="3dp"
                    android:src="@drawable/image_windmill"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_block"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/title_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bottom_line">

        <ImageView
            android:id="@+id/image_owner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/image_owner"/>

        <TextView
            android:id="@+id/title_of_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_owner"
            app:layout_constraintRight_toLeftOf="@id/edit_owner_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/crete_round"
            android:text="Właściciel"
            />

        <TextView
            android:id="@+id/how_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_of_owner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_owner"
            app:layout_constraintRight_toLeftOf="@id/edit_owner_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/rajdhani"
            android:text="Kamil Porada"
            />

        <ImageButton
            android:id="@+id/edit_owner_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_of_owner"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/mainColor"
            android:src="@drawable/icon_edit"
            android:background="@drawable/shape_button_2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_block"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/first_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bottom_line">

        <ImageView
            android:id="@+id/image_highgroves"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/image_highgrove"/>

        <TextView
            android:id="@+id/title_of_highgroves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_highgroves"
            app:layout_constraintRight_toLeftOf="@id/edit_highgroves_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/crete_round"
            android:text="Ilość tuneli"
            />

        <TextView
            android:id="@+id/how_highgroves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_of_highgroves"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_highgroves"
            app:layout_constraintRight_toLeftOf="@id/edit_highgroves_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/rajdhani"
            android:text="45"
            />

        <ImageButton
            android:id="@+id/edit_highgroves_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_of_highgroves"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/mainColor"
            android:src="@drawable/icon_edit"
            android:background="@drawable/shape_button_2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third_block"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/second_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bottom_line">

        <ImageView
            android:id="@+id/image_field"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/image_area_answer"/>

        <TextView
            android:id="@+id/title_of_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_field"
            app:layout_constraintRight_toLeftOf="@id/edit_field_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/crete_round"
            android:text="Powierzchnia"
            />

        <TextView
            android:id="@+id/how_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_of_field"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_field"
            app:layout_constraintRight_toLeftOf="@id/edit_field_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/rajdhani"
            android:text="7,28 ha"
            />

        <ImageButton
            android:id="@+id/edit_field_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_of_field"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/mainColor"
            android:src="@drawable/icon_edit"
            android:background="@drawable/shape_button_2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fourth_block"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/third_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bottom_line">

        <ImageView
            android:id="@+id/image_money"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_money"
            app:tint="@color/mainColor" />

        <TextView
            android:id="@+id/title_of_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_money"
            app:layout_constraintRight_toLeftOf="@id/edit_money_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/crete_round"
            android:text="Dochody"
            />

        <TextView
            android:id="@+id/how_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_of_money"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_money"
            app:layout_constraintRight_toLeftOf="@id/edit_money_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/rajdhani"
            android:text="0 zł"
            />

        <ImageButton
            android:id="@+id/edit_money_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_of_money"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/mainColor"
            android:src="@drawable/icon_edit"
            android:background="@drawable/shape_button_2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fiveth_block"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/fourth_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bottom_line">

        <ImageView
            android:id="@+id/image_outgoing"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_money"
            app:tint="@color/red" />

        <TextView
            android:id="@+id/title_of_outgoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_outgoing"
            app:layout_constraintRight_toLeftOf="@id/edit_outgoing_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/crete_round"
            android:text="Wydatki"
            />

        <TextView
            android:id="@+id/how_outgoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_of_outgoing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_outgoing"
            app:layout_constraintRight_toLeftOf="@id/edit_outgoing_button"
            android:textColor="@color/blackToWhite"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/rajdhani"
            android:text="0 zł"
            />

        <ImageButton
            android:id="@+id/edit_outgoing_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_of_outgoing"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/mainColor"
            android:src="@drawable/icon_edit"
            android:background="@drawable/shape_button_2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>