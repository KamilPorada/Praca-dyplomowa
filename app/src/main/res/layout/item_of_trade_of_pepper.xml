<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/backgroundColor"
    android:layout_marginTop="10dp"
    android:id="@+id/main_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/shape_right_main_tile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_layout"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_image_item_trade_of_pepper"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/main_container"
            app:layout_constraintLeft_toLeftOf="parent"

            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-7dp"
                android:src="@drawable/image_red_pepper"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/how_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/crete_round"
                android:text="27.07.2022"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image" />
            <ImageView
                android:id="@+id/remove_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/edit_item"
                app:layout_constraintBottom_toTopOf="@id/how_date"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/icon_remove"
                app:tint="@color/white"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/edit_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/remove_item"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/icon_edit"
                app:tint="@color/white"
                android:clickable="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_container"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_layout"
            android:padding="3dp"
            android:background="@drawable/shape_rectangle_with_top_line"
            >
            <TextView
                android:id="@+id/how_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/how_price"
                android:layout_marginLeft="5dp"
                android:text="Klasa: "
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/crete_round"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/how_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/how_class"
                app:layout_constraintBottom_toTopOf="@id/how_weight"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:text="Cena: "
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/crete_round"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/how_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/how_price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:text="Waga: "
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/crete_round"
                android:textSize="18dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/how_total_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/how_places_container"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/main_container"
            android:textAlignment="center"
            android:text="Suma:\n"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/crete_round"
            android:textSize="20dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/how_places_container"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/how_total_sum"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/main_container"
            >
            <TextView
                android:id="@+id/how_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="17dp"
                android:fontFamily="@font/crete_round"
                android:textColor="@color/blackToWhite"
                android:textAlignment="center"
                android:text=""/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>