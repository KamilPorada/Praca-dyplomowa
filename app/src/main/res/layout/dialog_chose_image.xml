<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@drawable/shape_bottom_dialog"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="75dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:text="WYBÓR IKONY"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/second_row"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_machine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_tools"
                android:src="@drawable/icon_machine"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_tools"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_machine"
                app:layout_constraintRight_toLeftOf="@id/image_pesticides"
                android:src="@drawable/image_tools"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_pesticides"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_tools"
                app:layout_constraintRight_toLeftOf="@id/image_plant"
                android:src="@drawable/image_bottle_of_pesticides"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_plant"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_pesticides"
                app:layout_constraintRight_toLeftOf="@id/image_paragraph"
                android:src="@drawable/image_plant"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_paragraph"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_plant"
                app:layout_constraintRight_toLeftOf="@id/image_calendar"
                android:src="@drawable/image_paragraph"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_calendar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_paragraph"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/icon_calendar"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_row"
            app:layout_constraintBottom_toTopOf="@id/third_row"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_money"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_clock"
                android:src="@drawable/icon_money"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_clock"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_money"
                app:layout_constraintRight_toLeftOf="@id/image_fertilizer"
                android:src="@drawable/icon_clock"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_fertilizer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_clock"
                app:layout_constraintRight_toLeftOf="@id/image_note"
                android:src="@drawable/image_fertilizer"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_note"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_fertilizer"
                app:layout_constraintRight_toLeftOf="@id/image_drop_of_water"
                android:src="@drawable/image_my_notes"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_drop_of_water"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_note"
                app:layout_constraintRight_toLeftOf="@id/image_pepper"
                android:src="@drawable/image_drop_of_water"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_pepper"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_drop_of_water"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/image_grey_pepper"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/second_row"
            app:layout_constraintBottom_toTopOf="@id/fourth_row"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_weed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_highgroves"
                android:src="@drawable/image_weed"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_highgroves"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_weed"
                app:layout_constraintRight_toLeftOf="@id/image_foil"
                android:src="@drawable/image_highgrove"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_foil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_highgroves"
                app:layout_constraintRight_toLeftOf="@id/image_pegs"
                android:src="@drawable/image_foil"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_pegs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_foil"
                app:layout_constraintRight_toLeftOf="@id/image_seeds"
                android:src="@drawable/image_pegs"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_seeds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_pegs"
                app:layout_constraintRight_toLeftOf="@id/image_pail"
                android:src="@drawable/image_seeds"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_pail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_seeds"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/image_pail"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/third_row"
            app:layout_constraintBottom_toTopOf="@id/fiveth_row"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_freeze"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_worm"
                android:src="@drawable/icon_freeze"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_worm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_freeze"
                app:layout_constraintRight_toLeftOf="@id/image_place"
                android:src="@drawable/image_worm"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_place"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_worm"
                app:layout_constraintRight_toLeftOf="@id/image_thunderstorm"
                android:src="@drawable/icon_place"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_thunderstorm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_place"
                app:layout_constraintRight_toLeftOf="@id/image_mushroom"
                android:src="@drawable/icon_thunderstorm"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_mushroom"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_thunderstorm"
                app:layout_constraintRight_toLeftOf="@id/image_wind"
                android:src="@drawable/image_mushrooms"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_wind"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_mushroom"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/icon_wind"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fiveth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fourth_row"
            app:layout_constraintBottom_toTopOf="@id/accept_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_telephone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_moon"
                android:src="@drawable/image_telephone"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_moon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_telephone"
                app:layout_constraintRight_toLeftOf="@id/image_plus"
                android:src="@drawable/icon_dark_mode"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_moon"
                app:layout_constraintRight_toLeftOf="@id/image_temperathure"
                android:src="@drawable/icon_plus"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_temperathure"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_plus"
                app:layout_constraintRight_toLeftOf="@id/image_line_chart"
                android:src="@drawable/icon_dose"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_line_chart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_temperathure"
                app:layout_constraintRight_toLeftOf="@id/image_done"
                android:src="@drawable/icon_line_chart"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite"/>

            <ImageView
                android:id="@+id/image_done"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_line_chart"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/icon_done"
                android:padding="3dp"
                android:background="@drawable/shape_black_rectangle"
                app:tint="@color/blackToWhite" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="130dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/accept_button"
            app:layout_constraintTop_toBottomOf="@id/fiveth_row"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="ANULUJ"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"/>
        <Button
            android:id="@+id/accept_button"
            android:layout_width="130dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cancel_button"
            app:layout_constraintTop_toBottomOf="@id/fiveth_row"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="ZATWIERDŹ"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top"
        app:srcCompat="@drawable/shape_circle_image"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

