<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/backgroundColor"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:id="@+id/main_parent"
    android:background="@drawable/shape_rectangle_with_top_and_bottom_line"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/shape_item_of_recyclerview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_layout"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_image_item_trade_of_pepper"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/image_drop_of_water"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/how_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crete_round"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="1dp"
                android:text="27.07.2022"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_block"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_layout"
        app:layout_constraintRight_toLeftOf="@id/button_layout"
        android:background="@drawable/shepe_space_between_blocks_of_recyclerview"
        >

        <TextView
            android:id="@+id/title_highgroves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/how_highgroves"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/title_time"
            android:text="Ilość tuneli"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/crete_round"
            android:textSize="17dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/how_highgroves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_highgroves"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title_highgroves"
            app:layout_constraintRight_toRightOf="@id/title_highgroves"
            android:text="45"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/rajdhani"
            android:textSize="17dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/how_time"
            app:layout_constraintLeft_toRightOf="@id/title_highgroves"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Łączny czas"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/crete_round"
            android:textSize="17dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/how_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title_time"
            app:layout_constraintRight_toRightOf="@id/title_time"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/rajdhani"
            android:text="8h 45 min"
            android:textSize="17dp"
            android:textAlignment="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_block"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/first_block"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_layout"
            app:layout_constraintRight_toLeftOf="@id/button_layout"
            android:background="@drawable/shepe_space_between_blocks_of_recyclerview"
            >
            <TextView
                android:id="@+id/title_efficiency_of_pump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/how_efficiency_of_pump"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_usage_of_water"
                android:text="Wydajność"
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/crete_round"
                android:textSize="17dp"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/how_efficiency_of_pump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_efficiency_of_pump"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/title_efficiency_of_pump"
                app:layout_constraintRight_toRightOf="@id/title_efficiency_of_pump"
                android:text="150 l/min"
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/rajdhani"
                android:textSize="17dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/title_usage_of_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/how_usage_of_water"
                app:layout_constraintLeft_toRightOf="@id/title_efficiency_of_pump"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Zużycie wody"
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/crete_round"
                android:textSize="17dp"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/how_usage_of_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_usage_of_water"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/title_usage_of_water"
                app:layout_constraintRight_toRightOf="@id/title_usage_of_water"
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/rajdhani"
                android:text="78 750l"
                android:textSize="17dp"
                android:textAlignment="center"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="5dp"
            android:background="@drawable/shepe_space_between_blocks_of_recyclerview"
            >

            <ImageView
                android:id="@+id/do_item"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/mainColor"
                android:clickable="true"
                android:padding="3dp"
                android:src="@drawable/image_tap"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/remove_item"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />
            <ImageView
                android:id="@+id/remove_item"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/do_item"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/icon_remove"
                app:tint="@color/white"
                android:clickable="true"
                android:background="@color/mainColor"
                android:padding="3dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>