<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:background="@drawable/image_baner">



        <ImageView
            android:id="@+id/owner_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/image_owner"
            app:layout_constraintBottom_toTopOf="@id/how_owner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/half"
            app:tint="@color/white" />


    <TextView
        android:id="@+id/how_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/half"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/crete_round"
        android:text="Właściciel\nKamil Porada"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />


</androidx.constraintlayout.widget.ConstraintLayout>