<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="70dp"
    android:background="@color/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_block"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_rectangle_with_top_and_bottom_line">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/title_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/title_of_round"
                android:src="@drawable/image_add_new_water"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/title_of_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/title_image"
                android:layout_marginLeft="20dp"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                android:fontFamily="@font/alata"
                android:text="TURA 1 "/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/first_block"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/title_block"
        android:background="@drawable/shape_bottom_line">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/title_block"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="2dp"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="false"
            android:background="@color/backgroundColor"/>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_block"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/first_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bottom_line">

        <TextView
            android:id="@+id/title_of_highgroves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/blackToWhite"
            android:textSize="20sp"
            android:layout_marginLeft="-2dp"
            android:fontFamily="@font/crete_round"
            android:text="Ilość tuneli"
            />

        <TextView
            android:id="@+id/how_highgroves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_of_highgroves"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title_of_highgroves"
            app:layout_constraintRight_toRightOf="@id/title_of_highgroves"
            android:textColor="@color/blackToWhite"
            android:textSize="20sp"
            android:fontFamily="@font/rajdhani"
            android:text="6"
            />

        <TextView
            android:id="@+id/title_of_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/title_of_highgroves"
            app:layout_constraintRight_toLeftOf="@id/title_of_efficiency"
            android:textColor="@color/blackToWhite"
            android:textSize="20sp"
            android:fontFamily="@font/crete_round"
            android:text="Czas"
            />

        <TextView
            android:id="@+id/how_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_of_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title_of_time"
            app:layout_constraintRight_toRightOf="@id/title_of_time"
            android:textColor="@color/blackToWhite"
            android:textSize="20sp"
            android:fontFamily="@font/rajdhani"
            android:text="50 minut"
            />

        <TextView
            android:id="@+id/title_of_efficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/blackToWhite"
            android:textSize="20sp"
            android:fontFamily="@font/crete_round"
            android:text="Wydajność"
            />

        <TextView
            android:id="@+id/how_efficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_of_efficiency"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title_of_efficiency"
            app:layout_constraintRight_toRightOf="@id/title_of_efficiency"
            android:textColor="@color/blackToWhite"
            android:textSize="20sp"
            android:fontFamily="@font/rajdhani"
            android:text="150 l/min"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third_block"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/second_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bottom_line">

        <TextView
            android:id="@+id/title_of_watering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="28sp"
            android:textColor="@color/blackToWhite"
            android:textAlignment="center"
            android:fontFamily="@font/crete_round"
            android:text="Trwa podlewanie..."/>

        <ImageView
            android:id="@+id/image_of_watering"
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:layout_constraintTop_toBottomOf="@id/title_of_watering"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/image_drop_of_water"
            android:padding="50dp"
            app:tint="#03A9F4" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_of_watering"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="40sp"
            android:textColor="@color/blackToWhite"
            android:textAlignment="center"
            android:fontFamily="@font/alata"
            android:text="45:00"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fourth_block"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/third_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bottom_line">

        <ImageButton
            android:id="@+id/resume_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/pause_button"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_resume"
            android:background="@drawable/shape_black_rectangle"
            app:tint="@color/blackToWhite" />

       <ImageButton
           android:id="@+id/pause_button"
           android:layout_width="50dp"
           android:layout_height="50dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:src="@drawable/icon_pause"
           android:background="@drawable/shape_black_rectangle"
           app:tint="@color/blackToWhite" />

        <ImageButton
            android:id="@+id/stop_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/pause_button"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_stop"
            android:background="@drawable/shape_black_rectangle"
            app:tint="@color/blackToWhite" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>