<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/backgroundColor"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:id="@+id/main_parent"
    android:backgroundTint="@color/backgroundColor"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:padding="1dp"
        android:background="@drawable/shape_black_rectangle"
        >

        <TextView
            android:id="@+id/how_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/alata"
            android:textAlignment="center"
            android:text="TURA 1"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/title_highgroves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/how_highgroves"
            app:layout_constraintLeft_toRightOf="@id/how_round"
            app:layout_constraintRight_toLeftOf="@id/title_time"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/alata"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Iość tuneli:"/>

        <TextView
            android:id="@+id/how_highgroves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_highgroves"
            app:layout_constraintLeft_toLeftOf="@id/title_highgroves"
            app:layout_constraintRight_toRightOf="@id/title_highgroves"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:textColor="@color/blackToWhite"
            android:textSize="18sp"
            android:fontFamily="@font/rajdhani"
            android:text="6"/>

        <TextView
            android:id="@+id/title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/how_time"
            app:layout_constraintLeft_toRightOf="@id/title_highgroves"
            app:layout_constraintRight_toLeftOf="@id/image"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/alata"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Czas:"/>

        <TextView
            android:id="@+id/how_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_time"
            app:layout_constraintLeft_toLeftOf="@id/title_time"
            app:layout_constraintRight_toRightOf="@id/title_time"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:textColor="@color/blackToWhite"
            android:textSize="18sp"
            android:fontFamily="@font/rajdhani"
            android:text="50 min."/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="5dp"
            android:src="@drawable/image_drop_of_water"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>