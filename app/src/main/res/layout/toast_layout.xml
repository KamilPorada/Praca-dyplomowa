<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:background="@drawable/shape_toast"
    android:id="@+id/toast_layout_calculator_of_field">

    <ImageView
        android:id="@+id/toast_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/toast_text"
        android:src="@drawable/image_attention"
        app:tint="@color/white"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/toast_image"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:text="Uwaga"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>