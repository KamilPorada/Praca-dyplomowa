<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_of_pesticide_layout"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="70dp">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/drawable_layout"
       android:layout_width="180dp"
       android:layout_height="260dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:background="@drawable/shape_rectangle_with_top_line">

      <TextView
         android:id="@+id/type_of_pesticide"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toTopOf="@id/image_of_pesticide"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:textAlignment="center"
         android:textColor="@color/white"
         android:textSize="20sp"
         android:fontFamily="@font/crete_round"
         android:text="FUNGICYD"/>

      <ImageView
          android:id="@+id/image_of_pesticide"
          android:layout_width="150dp"
          android:layout_height="180dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:layout_marginTop="40dp"
          android:padding="20dp"
          android:background="@drawable/shape_black_rectangle"
          android:src="@drawable/image_pesticide_topsin"/>

      <TextView
          android:id="@+id/name_of_pesticide"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/image_of_pesticide"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:fontFamily="@font/crete_round"
          android:text="TOPSIN M 500 SC"/>


   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>