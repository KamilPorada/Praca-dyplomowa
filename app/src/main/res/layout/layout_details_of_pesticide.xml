<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_of_pesticide_layout"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="70dp"
    android:background="@color/backgroundColor">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/drawable_layout"
       android:layout_width="180dp"
       android:layout_height="280dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:background="@drawable/shape_main_color_rectangle_with_white_stroke">

      <TextView
         android:id="@+id/type_of_pesticide"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toTopOf="@id/image_of_pesticide"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:textAlignment="center"
         android:textColor="@color/white"
         android:textSize="25sp"
         android:fontFamily="@font/crete_round"/>
      <ImageView
          android:id="@+id/image_of_pesticide"
          android:layout_width="150dp"
          android:layout_height="180dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:layout_marginTop="40dp"
          android:padding="10dp"
          android:background="@drawable/shape_black_rectangle"
          />

      <TextView
          android:id="@+id/name_of_pesticide"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/image_of_pesticide"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="18sp"
          android:fontFamily="@font/crete_round"
          />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/first_block"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toRightOf="@id/drawable_layout"
       app:layout_constraintRight_toRightOf="parent"
       android:background="@drawable/shape_bottom_line">

      <TextView
          android:id="@+id/title_of_pest"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toTopOf="@id/how_pest"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="20sp"
          android:fontFamily="@font/crete_round"
          android:textAlignment="center"
          android:text="Zwalczany szkodnik"
          />

      <TextView
          android:id="@+id/how_pest"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/title_of_pest"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="17sp"
          android:fontFamily="@font/rajdhani"
          android:textAlignment="center"
          />

</androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/second_block"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/first_block"
       app:layout_constraintBottom_toTopOf="@id/third_block"
       app:layout_constraintLeft_toRightOf="@id/drawable_layout"
       app:layout_constraintRight_toRightOf="parent"
       android:background="@drawable/shape_bottom_line">

      <TextView
          android:id="@+id/title_of_dose"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toTopOf="@id/how_dose"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="20sp"
          android:fontFamily="@font/crete_round"
          android:textAlignment="center"
          android:text="Zalecana dawka"
          />

      <TextView
          android:id="@+id/how_dose"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/title_of_dose"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="17sp"
          android:fontFamily="@font/rajdhani"
          android:textAlignment="center"
          android:text=""
          />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/third_block"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="@id/drawable_layout"
       app:layout_constraintLeft_toRightOf="@id/drawable_layout"
       app:layout_constraintRight_toRightOf="parent"
       android:background="@drawable/shape_bottom_line">

      <TextView
          android:id="@+id/title_of_grace"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toTopOf="@id/how_grace"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="20sp"
          android:fontFamily="@font/crete_round"
          android:textAlignment="center"
          android:text="Karencja"
          />

      <TextView
          android:id="@+id/how_grace"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/title_of_grace"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="17sp"
          android:fontFamily="@font/rajdhani"
          android:textAlignment="center"
          android:text=""
          />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/fourth_block"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/drawable_layout"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:background="@drawable/shape_bottom_line">

      <TextView
          android:id="@+id/title_of_notes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toTopOf="@id/how_notes"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="20sp"
          android:fontFamily="@font/crete_round"
          android:textAlignment="center"
          android:text="Zastosowanie"
          />

      <TextView
          android:id="@+id/how_notes"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/title_of_notes"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="17sp"
          android:fontFamily="@font/rajdhani"
          android:textAlignment="center"
          />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/fiveth_block"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/fourth_block"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:background="@drawable/shape_bottom_line">

      <TextView
          android:id="@+id/title_of_attention"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toTopOf="@id/how_attention"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/red"
          android:textSize="20sp"
          android:fontFamily="@font/crete_round"
          android:textAlignment="center"
          android:text="OSTRZEŻENIE!"
          />

      <TextView
          android:id="@+id/how_attention"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/title_of_attention"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:textColor="@color/blackToWhite"
          android:textSize="17sp"
          android:fontFamily="@font/rajdhani"
          android:textAlignment="center"
          android:text="Pamiętaj, że pracujesz z truciznami! Aby nie szkodzić ludziom i środowisku, przestrzegaj terminów karencji. Jeżeli dojdzie do kontaktu pestycydu z płynami ustrojowymi niezwłocznie udaj się na pogotowie!"
          />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <Button
       android:id="@+id/button_come_back"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/shape_button"
       android:text="KATALOG PESTYCYDÓW"
       android:textColor="@color/white"
       android:textSize="15sp"
       app:layout_constraintTop_toBottomOf="@id/fiveth_block"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>