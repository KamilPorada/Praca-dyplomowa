<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="350dp"
    android:layout_height="720dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bottom_dialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_top_dialog"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Nowa sprzedaż"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:src="@drawable/image_trade_of_vegetables"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_block"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/third_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/second_block">

    <TextView
        android:id="@+id/title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Kolor:"
        android:textSize="25dp"
        android:textColor="@color/blackToWhite"
        android:padding="8dp"
        android:background="@drawable/shape_button"/>

    <RadioGroup
        android:id="@+id/color_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_color"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <RadioButton
            android:id="@+id/red_color"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:buttonTint="@color/red"
            android:text="czerwona"
            android:textColor="@color/blackToWhite"
            android:textSize="18dp"
            />
        <RadioButton
            android:id="@+id/yellow_color"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:buttonTint="@color/yellow"
            android:text="żółta"
            android:textColor="@color/blackToWhite"
            android:textSize="18dp"/>
        <RadioButton
            android:id="@+id/green_color"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:buttonTint="@color/green"
            android:text="zielona"
            android:textColor="@color/blackToWhite"
            android:textSize="18dp"/>
        <RadioButton
            android:id="@+id/orange_color"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:buttonTint="@color/orange"
            android:text="pomarańczowa"
            android:textColor="@color/blackToWhite"
            android:textSize="18dp"/>
        <RadioButton
            android:id="@+id/blond_color"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:buttonTint="@color/blond"
            android:text="blondyna"
            android:textColor="@color/blackToWhite"
            android:textSize="18dp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/title_vat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/color_radio_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Stawka VAT:"
        android:textSize="25dp"
        android:textColor="@color/blackToWhite"
        android:padding="8dp"
        android:background="@drawable/shape_button"/>

    <RadioGroup
        android:id="@+id/vat_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_vat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

        <RadioButton
            android:id="@+id/zero_percent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:buttonTint="@color/blackToWhite"
            android:text="0%"
            android:textColor="@color/blackToWhite"
            android:textSize="18dp"
            />
        <RadioButton
            android:id="@+id/seven_percent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:buttonTint="@color/blackToWhite"
            android:text="7%"
            android:textColor="@color/blackToWhite"
            android:textSize="18dp"
            />

    </RadioGroup>

        <TextView
            android:id="@+id/title_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vat_radio_group"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Klasa"
            android:textSize="25dp"
            android:textColor="@color/blackToWhite"
            android:padding="8dp"
            android:background="@drawable/shape_button"/>

        <RadioGroup
            android:id="@+id/class_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_class"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <RadioButton
                android:id="@+id/first_class"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:buttonTint="@color/blackToWhite"
                android:text="1"
                android:textColor="@color/blackToWhite"
                android:textSize="18dp"
                />
            <RadioButton
                android:id="@+id/second_class"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:buttonTint="@color/blackToWhite"
                android:text="2"
                android:textColor="@color/blackToWhite"
                android:textSize="18dp"
                />
            <RadioButton
                android:id="@+id/cutting_class"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:buttonTint="@color/blackToWhite"
                android:text="krojona"
                android:textColor="@color/blackToWhite"
                android:textSize="18dp"
                />


        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_block"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/third_block"
        app:layout_constraintLeft_toRightOf="@id/first_block"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/title_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="25dp"
            android:textColor="@color/blackToWhite"
            android:padding="8dp"
            android:background="@drawable/shape_button"
            android:text="Cena:"/>

        <EditText
            android:id="@+id/how_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:hint="[zł]"
            android:textAlignment="center"
            android:textColor="@color/blackToWhite"
            android:inputType="numberDecimal"
            android:textSize="18dp"
            android:background="@drawable/shape_edit_text"
            />

        <TextView
            android:id="@+id/title_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/how_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="25dp"
            android:textColor="@color/blackToWhite"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button"
            android:text="Waga:"/>

        <EditText
            android:id="@+id/how_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_weight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:hint="[kg]"
            android:textAlignment="center"
            android:textColor="@color/blackToWhite"
            android:inputType="numberDecimal"
            android:textSize="18dp"
            android:background="@drawable/shape_edit_text"
            />

        <TextView
            android:id="@+id/title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/how_weight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="25dp"
            android:textColor="@color/blackToWhite"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button"
            android:text="Data:"/>

        <EditText
            android:id="@+id/how_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:hint="[dd.mm.rrrr]"
            android:textAlignment="center"
            android:textColor="@color/blackToWhite"
            android:inputType="text"
            android:textSize="18dp"
            android:background="@drawable/shape_edit_text"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/accept_button">

        <TextView
            android:id="@+id/title_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="25dp"
            android:textColor="@color/blackToWhite"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button"
            android:text="Miejsce sprzedaży:"/>

        <EditText
            android:id="@+id/how_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_place"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/blackToWhite"
            android:inputType="text"
            android:textSize="18dp"
            android:maxLength="45"
            android:background="@drawable/shape_edit_text"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/accept_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:text="ANULUJ"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"/>
    <Button
        android:id="@+id/accept_button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:text="ZATWIERDŹ"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>