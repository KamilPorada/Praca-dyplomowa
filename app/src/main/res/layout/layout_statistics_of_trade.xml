<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="70dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="35dp"
        android:fontFamily="@font/crete_round"
        android:textColor="@color/blackToWhite"
        android:text="Sprzedaż papryki w liczbach"
        />


    <TableLayout
        android:id="@+id/data_frame"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/btn_trade_in_charts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="40dp">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Papryka czerwona [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_of_red_pepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Papryka żółta [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_of_yellow_pepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Papryka zielona [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_of_green_pepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Papryka pomarańczowa [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_of_orange_pepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Papryka biała [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_of_blond_pepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Papryka klasy 1 [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_of_first_class_pepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Papryka klasy 2 [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_of_second_class_pepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Papryka klasy krojonej [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_of_cutting_class_pepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Przychód przypadający na 1 tunel [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/weight_from_highgrove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Przychód przypadający na 1 tunel [zł]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/income_from_highgrove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0.00 zł"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Średnia cena papryki [zł]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/average_price_of_pepper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0.00 zł"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SUMA [kg]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/total_sum_of_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0.00 kg"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SUMA [zł]"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:background="@color/mainColor"
                />
            <TextView
                android:id="@+id/total_sum_of_income"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0.00 zł"
                android:textColor="@color/blackToWhite"
                android:padding="5sp"
                android:textSize="13sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:background="@color/whiteToDarkGrey"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_trade_in_charts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button"
        android:text="Sprzedaż papryki na wykresach"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:drawableLeft="@drawable/icon_pie_chart"
        android:drawableTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>