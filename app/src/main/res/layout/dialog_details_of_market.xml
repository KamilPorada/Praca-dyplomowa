<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@drawable/shape_bottom_dialog"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="75dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/how_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:text="DOLNOŚLĄSKIE CENTRUM HURTU ROLNO - SPOŻYWCZEGO S.A."
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_block"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/how_location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_black_rectangle"
            android:layout_margin="5dp"
            >

            <ImageView
                android:id="@+id/image_address"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@id/how_address"
                app:layout_constraintBottom_toBottomOf="@id/how_address"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/icon_location"
                app:tint="@color/white"
                android:background="@drawable/shape_main_color_rectangle_with_black_stroke"
                />

            <TextView
                android:id="@+id/how_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_address"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/forum"
                android:textSize="17sp"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="Giełdowa 4, 52-438 Wrocław, Polska"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_block"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/first_block"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_black_rectangle"
            android:layout_margin="5dp"
            >

            <ImageView
                android:id="@+id/image_email"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@id/how_email"
                app:layout_constraintBottom_toBottomOf="@id/how_email"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/icon_email"
                app:tint="@color/white"
                android:background="@drawable/shape_main_color_rectangle_with_black_stroke"/>

            <TextView
                android:id="@+id/how_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_email"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/forum"
                android:textSize="17sp"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="www.dchrs.com.pl"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/third_block"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/second_block"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_black_rectangle"
            android:layout_margin="5dp"
            >

            <ImageView
                android:id="@+id/image_telephone"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@id/how_telephone"
                app:layout_constraintBottom_toBottomOf="@id/how_telephone"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/icon_telephone"
                app:tint="@color/white"
                android:background="@drawable/shape_main_color_rectangle_with_black_stroke"/>

            <TextView
                android:id="@+id/how_telephone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_telephone"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/forum"
                android:textSize="17sp"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="713-340-920"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_come_back"
            android:layout_width="130dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/third_block"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:text="Powrót"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top"
        app:srcCompat="@drawable/shape_circle_delivery"
        />

</androidx.constraintlayout.widget.ConstraintLayout>