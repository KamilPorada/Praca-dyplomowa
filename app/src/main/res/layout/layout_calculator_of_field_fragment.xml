<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_calculator_of_field_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="70dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/crete_round"
            android:text="Kalkulator pola\npowierzchni działki"
            android:textAlignment="center"
            android:textColor="@color/blackToWhite"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            android:layout_marginTop="55dp">

            <EditText
                android:id="@+id/length"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/width"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Długość działki [m]"
                android:textColor="@color/blackToWhite"
                android:inputType="numberDecimal"
                android:drawableTint="@color/blackToWhite"
                android:drawableStart="@drawable/image_height"
                android:drawablePadding="20dp"
                android:textSize="18dp"
                android:background="@drawable/shape_edit_text2"
                />
            <EditText
                android:id="@+id/width"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/length"
                app:layout_constraintBottom_toTopOf="@id/radio_group"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Szerokość_działki [m]"
                android:textColor="@color/blackToWhite"
                android:inputType="numberDecimal"
                android:drawableTint="@color/blackToWhite"
                android:drawableStart="@drawable/image_length"
                android:drawablePadding="20dp"
                android:textSize="18dp"
                android:background="@drawable/shape_edit_text2"
                />
            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/width"
                app:layout_constraintBottom_toTopOf="@id/calculate_field"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ares"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="a"
                    android:textSize="28dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/shape_radio_button"
                    android:button="@color/mainColor"/>
                <RadioButton
                    android:id="@+id/hektares"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="ha"
                    android:textSize="28dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/shape_radio_button"
                    android:button="@color/mainColor"/>
                <RadioButton
                    android:id="@+id/quadratic_meters"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="m²"
                    android:textSize="28dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/shape_radio_button"
                    android:button="@color/mainColor"/>
                <RadioButton
                    android:id="@+id/quadratic_kilometers"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="km²"
                    android:textSize="28dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/shape_radio_button"
                    android:button="@color/mainColor"/>
            </RadioGroup>

            <Button
                android:id="@+id/reset_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/radio_group"
                app:layout_constraintBottom_toTopOf="@id/image_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/calculate_field"
                android:background="@drawable/shape_button"
                android:text="RESET"
                android:textSize="20dp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/calculate_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/radio_group"
                app:layout_constraintBottom_toTopOf="@id/image_layout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/reset_data"
                android:background="@drawable/shape_button"
                android:text="OBLICZ"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image_layout"
                android:layout_width="380dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/calculate_field"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/image_answer_field"
                android:backgroundTint="@color/blackToWhite">

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="45dp"
                    android:textSize="35dp"
                    android:textColor="@color/blackToWhite"
                    android:text="" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>