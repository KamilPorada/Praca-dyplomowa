<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/backgroundColor"
    android:layout_marginTop="10dp"
    android:id="@+id/main_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/shape_right_main_tile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_layout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_image_item_trade_of_pepper"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/main_container"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/image"
                android:fontFamily="@font/crete_round"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="Zabieg\ninsektycydowy"/>
            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/image_weed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_marginBottom="5dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_container"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_layout"
            android:padding="3dp"
            android:background="@drawable/shape_background_color_rectangle_with_main_color_stroke"
            >
            <TextView
                android:id="@+id/how_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/how_price"
                android:layout_marginLeft="5dp"
                android:text="Pestycyd "
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/crete_round"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/how_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/how_class"
                app:layout_constraintBottom_toTopOf="@id/how_weight"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:text="Godzina"
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/crete_round"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/how_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/how_price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:text="Waga: "
                android:textColor="@color/blackToWhite"
                android:fontFamily="@font/crete_round"
                android:textSize="18dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/how_total_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/how_places_container"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/main_container"
            android:textAlignment="center"
            android:text="Status"
            android:textColor="@color/blackToWhite"
            android:fontFamily="@font/crete_round"
            android:textSize="20dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/how_places_container"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/how_total_sum"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/main_container"
            >
            <TextView
                android:id="@+id/how_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="17dp"
                android:fontFamily="@font/crete_round"
                android:textColor="@color/blackToWhite"
                android:textAlignment="center"
                android:text="Karencja"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>